@model IEnumerable<Customer>

<h1>All Customers</h1>

@foreach (var customer in Model)
{
    <section class="panel panel-default">
        <h3 class="panel-heading">Name: @customer.Name</h3>
        <div class="panel-body">Balance: $@customer.NewBalance </div>
        <div class="panel-footer">
            <a class="btn btn-default" asp-action="Detail" asp-route-id="@customer.Id">More</a>
        </div>
    </section>
}
<div>
    <a class="btn btn-primary" asp-action="Create">Create Customer</a>
</div>
